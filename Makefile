########################################################################################################################

all: doc
	echo 'Ok.'

########################################################################################################################

.PHONY: doc
doc:
	cd doc && make html

########################################################################################################################

.PHONY: test
test:
	python3 -m pytest ./test/

########################################################################################################################

.PHONY: cov
cov:
	python3 -m pytest --cov=decontamination --cov-report xml ./test/

########################################################################################################################

.PHONY: htmlcov
htmlcov:
	python3 -m pytest --cov=decontamination --cov-report html ./test/

########################################################################################################################

clean:
	rm -fr ./build/ ./*.egg-info/ ./doc/_build/

########################################################################################################################
